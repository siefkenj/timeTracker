//	Install stylus with `npm install stylus -g`
//	Install nib with    `npm install nib -g` (for css3 comaptability extensions)
//

@import 'globals.styl'
@import 'nib'

.container
    display:flex
    flex-direction:column
    height:100%

.calendar-view
    width:100%
    height:100%
    flex-grow:1

#month
    background: orange
    padding:0px
    margin: 0px

.prev-month, .next-month
    display: inline
    cursor: pointer
    margin: 0px

.prev-month
    float: left

.next-month
    float: right

.month-name
    text-align: center
    margin: 0px

.day
    border:1px solid black
    text-align:right
    vertical-align:top
    background: $today-bg

.calendar-day-people-list
    position:relative
    top: - $day-number-size

.calendar-day-people
    margin: $calendar-day-people-margin

.day-number
    text-align:left
    margin:0px
    font-size:$day-number-size
    color: $day-number-color
    overflow: hidden
