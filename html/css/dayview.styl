//	Sylus file to be compiled to CSS with
//
//	`stylus frame.styl -u nib`
//
//      To watch a file for changes
//	`stylus -w frame.styl -u nib`
//
//	Install stylus with `npm install stylus -g`
//	Install nib with    `npm install nib -g` (for css3 comaptability extensions)
//

@import 'nib'
@import 'globals.styl'

rowHeight=25px

#container
	display: flex
	flex-direction: column
	flex-wrap: nowrap

.hourScroller, .hourScrollerHeader
	display: flex
	flex-direction: row
.hourScroller
	flex-grow: 1
	overflow: auto
.hourScrollerHeader
	.name
		flex-grow: 1
		text-align: center

.column 
	&.hours
		text-align: right
		margin-right: 4px
		width: 3em
		box-sizing: border-box
	&.hoursGrid
		flex-grow: 1
		position: relative
		background: yellow
		.time
			border-top: 2px solid black
		.hourSpan
			box-sizing: border-box
			position: absolute
			background: rgba(0, 128, 15, 0.75)
			left: 1em
			//top: rowHeight*1.5
			//height: rowHeight*6
			padding: 4px
			border-radius: 8px
			padding-top: 1em
			padding-bottom: 1em
			transition: top .3s, height .3s
			width: 80%

			.top-handle,.bottom-handle
				position: absolute
				width: 80%
				background: lightgreen
			.top-handle
				top: 0px
			.bottom-handle
				bottom: 0px

			.top-handle:hover,.bottom-handle:hover
				background: lightskyblue
			

		for num in (1..24)
			for half in 0 5
				.hourSpan.length-{num}-{half}
					height: (num+half/10)*rowHeight
		for startHour in (-2..28)
			for startHalf in 0 5
				.hourSpan.start-{startHour}-{startHalf}
					// FIX this shouldn't be absolute!!
					top: (startHour + startHalf/10 + 2)*rowHeight


	.time
		box-sizing: border-box
		height: rowHeight
		&.not-today
			background: gray



.person-day-info-container
	margin-top: 5px
	margin-bottom: 5px

	.name
		font-weight: bold
		padding: 2px
		font-size: larger
	.dec, .inc
		margin: 0px
		display: inline-block
		border: 1px solid black
		background: #FFE698
		width: 2em
	.dec
		border-top-left-radius: 7px
		border-bottom-left-radius: 7px
	.inc
		border-top-right-radius: 7px
		border-bottom-right-radius: 7px
		border-left: none
.adjustable-hour-container input
	width: 3em
	margin-right: 3px
	margin-left: 3px
.adjustable-hour-container
	display: inline-block
	margin-left: 2em
