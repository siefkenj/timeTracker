@import 'nib'

nonSelectGlow=#006D9F

body
    width: 100%
    height: 100%
    background: lightgray


.hourspan-container
    display: inline-block
    font-family: sans-serif
    position: relative

    border-top: 1px solid black
    border-bottom: 1px solid black

    .top-time, .bottom-time
        width: 100%
        background: #c6c6b6
    .top-time
        position: absolute
        top: 0px
        border-bottom-left-radius: 8px
        box-shadow: 0px -5px 5px -5px nonSelectGlow
        cursor: n-resize
    .bottom-time
        position: absolute
        bottom: 0px
        border-top-left-radius: 8px
        box-shadow: 0px 5px 5px -5px nonSelectGlow
        cursor: s-resize
    .stem
        height: 100%
        width: 100%
        box-sizing: border-box
        padding-left: 40px
    .duration
        position: relative
        height: 100%
        width: 100%
        background: rgba(230, 211, 153, 0.63)
    .duration-text
        font-weight: bold
        text-align: center
        position: absolute
        left: 50%
        top: 50%
        .rotate
            transform: translateX(-50%) translateY(-50%) rotate(-90deg)
    .time
        margin-left: 8px
        padding: 2px

    .close-button
        position: absolute
        right: 2px
        //top: 3ex
        top: 2px
        border-radius: 5px
        background: #c6c6b6
        width: 1.2em
        height: 1.2em
        text-align: center
        box-shadow: 0px 0px 3px black
        cursor: pointer
    .close-button:hover
        box-shadow: 0px 0px 3px #FFFA84
        

.hourspan-container.compact-vert
    .duration-text
        left: inherit
        right: inherit
        top: 30%
        .rotate
            transform: none
            font-size: smaller
    .time
        padding: 0px
        font-size: smaller
    .top-time, .bottom-time
        height: 14px
        
        
.hourspan-container.compact-horiz
    
    .top-time, .bottom-time
        border-radius: 0px
    .stem
        padding: 0px
    .time
        margin-left: 0px
        overflow: hidden
        text-overflow: ellipsis




// hour scroller css

rowHeight = 25px
minHour = -2
maxHour = 26
headerHeight = 1.5em

.dayview-hours
    width: 100%
    display: flex
    flex-direction: row
    .column.hours
        text-align: right
        margin-right: 4px
        width: 3em
        box-sizing: border-box
    .name
        position: absolute
        height: 0
        top: - headerHeight
        width: 100%
        text-align: center
    .column
        margin-top: headerHeight
        
    .column 
        &.hours-grid
            flex-grow: 1
            position: relative
            background: #FFFFC5
            .hours
                border-top: 1px solid black
                

            for startHour in (minHour..maxHour)
                for startHalf in 0 5
                    .hourspan-container.end-{startHour}-{startHalf}
                        bottom: (maxHour - minHour + 2)*rowHeight - (startHour + startHalf/10 + 2)*rowHeight
            for startHour in (minHour..maxHour)
                for startHalf in 0 5
                    .hourspan-container.start-{startHour}-{startHalf}
                        // FIX this shouldn't be absolute!!
                        top: (startHour + startHalf/10 + 2)*rowHeight
        &.name
            flex-grow: 1
            text-align: center


        .hours
            box-sizing: border-box
            height: rowHeight
            &.not-today
                background: rgba(128, 128, 128, 0.57)

    // override some of the display settings
    .hourspan-container,.hourspan-container.compact-horiz,.hourspan-container.compact-vert
        width: 100%
        height: unset
        position: absolute
