doctype html
html(lang="en", ng-app='App')
    head
        meta(charset="UTF-8", name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")

        title='Time Tracker'

        // local content
        link(href="css/frame.css" rel="stylesheet")
        link(rel="stylesheet", href="css/dayview.css")
        block extraCSS

        // cdn content
        link(rel="stylesheet", href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css")

        block controller

    body(ng-controller="MainController")
        div(id="header")
            div(class="left")
            div(class="middle")
                | Time Tracker
            div(class="right")
                button(id="calendar", ng-click="showCalendar()")="Calendar"
                button(id="day", ng-click="showDay()")="Day"
                button(id="about")="About"
        div(id="content")
            block content
        div(id="footer")
            div(class="left")
            div(class="middle")
                | footer
            div(class="right")
