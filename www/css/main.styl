//
//	Sylus file to be compiled to CSS with
//
//	`stylus frame.styl -u nib`
//
//      To watch a file for changes
//	`stylus -w frame.styl -u nib`
//
//	Install stylus with `npm install stylus -g`
//	Install nib with    `npm install nib -g` (for css3 comaptability extensions)
//

@import 'nib'

html
    height: 100%
body
    padding-top: 50px
    height: 100%
    //background: orange

.nav-year, .nav-month, .nav-day
    font-size: smaller
.nav-month
    a
        padding-right: 5px !important
        padding-left: 5px !important
.nav-year
    a
        padding-right: 5px !important
.nav-day
    a
        padding-left: 5px !important
.nav-month:before, .nav-day:before
    content: '/'
    float: left
    position: relative
    padding-top: 18px


// make the dropdown menus in the pager look right
.pager .dropdown-menu li a
    display: block
    border-radius: 0px
    border: none

.main-container
    height: 100%
    display: flex
    flex-direction: column

.flex-row-non-expand
    flex: 0 1 auto
.flex-row-expand
    flex: 1 1 auto
.calendar-container
    width: 100%
    height: 100%
    background: purple
    
.day-container
    width: 100%
    height: 100%
    overflow: auto

    .not-today
        background: #cbcbcb
        color: #878787
    .col-hour
        width: 2em
        text-align: right
    .col-new
        width: 3em
        text-align: right
    .table
        position: relative

    .hourspan-container
        position: absolute
        width: 7em
        height: 9em
        padding-left: 4px
        padding-right: 4px
    .hourspan
        height: 100%
        position: relative

.alert
    .icon-bar
        border-radius: .5px
        display: block
        width: 22px
        height: 1px
        background-color: #3c763d
        margin-bottom: 1px
    .drag-handle
        width: 100%
        text-align: center
        height: 4px
    .drag-handle
        cursor: pointer
    .drag-handle.top
        background-color: #3c763d
        margin-top: -12px
    .drag-handle.bottom
        position: absolute
        background-color: #3c763d
        bottom: 5px
    .drag-handle-container
        display: inline-block
        height: 4px
    
