//
//	Sylus file to be compiled to CSS with
//
//	`stylus frame.styl -u nib`
//
//      To watch a file for changes
//	`stylus -w frame.styl -u nib`
//
//	Install stylus with `npm install stylus -g`
//	Install nib with    `npm install nib -g` (for css3 comaptability extensions)
//

@import 'nib'

html
    height: 100%
body
    padding-top: 50px
    height: 100%
    //background: orange

.nav-year, .nav-month, .nav-day
    font-size: smaller
.nav-month
    a
        padding-right: 5px !important
        padding-left: 5px !important
.nav-year
    a
        padding-right: 5px !important
.nav-day
    a
        padding-left: 5px !important
.nav-month:before, .nav-day:before
    content: '/'
    float: left
    position: relative
    padding-top: 18px


// make the dropdown menus in the pager look right
.pager .dropdown-menu li a
    display: block
    border-radius: 0px
    border: none

.main-container
    height: 100%
    display: flex
    flex-direction: column

.flex-row-non-expand
    flex: 0 1 auto
.flex-row-expand
    flex: 1 1 auto
.calendar-container
    width: 100%
    height: 100%
    background: purple
    
.day-container
    width: 100%
    height: 100%
    overflow: auto

    .not-today
        background: #cbcbcb
        color: #878787
    .col-hour
        width: 2em
        text-align: right
    .col-new
        width: 3em
        text-align: right
    .table
        position: relative
    th
        position: relative

    .hourspan-container.compact
        .drag-handle.top
            padding: 0px
            flex: 1 1 0px
        .drag-handle.bottom
            padding: 0px
            flex: 1 1 0px
        .middle
            display: none
        .remove-button
            padding-top: 0px
            padding-bottom: 0px
            height: 100%

    .hourspan-container
        position: absolute
        width: 100%
        left: 0px
        height: 9em
        padding-left: 4px
        padding-right: 4px
    .hourspan.alert
        padding: 0px
    .hourspan
        display: flex
        flex-direction: column
        height: 100%
        position: relative

        .remove-button:hover
            color: #000
            background-color: rgba(205, 205, 205, 0.67)
        .remove-button
            position: absolute
            right: 0px
            top: 0px
            color: unset
            background-color: unset
            border: unset
        .middle
            flex: 1 1 0px
            overflow: hidden
            padding-top: 0px
            padding-bottom: 0px
            padding-left: 3px
            padding-right: 3px

    // not ideal, but it works!
    // this is the "Create new hourspan"
    // text that appears on hover
    .hour[x-name].hoverable:hover
        background-color: #337ab7
    .new-hourspan-hover
        color: #fff
        padding-left: 3px
        cursor: default
        position: absolute

.alert
    .icon-bar
        border-radius: .5px
        display: block
        width: 100%
        height: 1px
        background-color: #3c763d
        margin-bottom: 1px
    .drag-handle:hover
        .icon-bar
            background-color: #79B07A
    .drag-handle
        width: 100%
        cursor: pointer
    .drag-handle.top
        padding-top: 1px
        padding-bottom: 10px
        .drag-handle-container
            width: 100%
            position: absolute
            top: 0
    .drag-handle.bottom
        padding-bottom: 1px
        padding-top: 10px
        .drag-handle-container
            width: 100%
            position: absolute
            bottom: 0
    .drag-handle-container
        height: 4px
    
