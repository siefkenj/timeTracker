html(lang="en", ng-app='App')
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")

        title='Time Tracker'

        // local content
        link(href="css/bootstrap.css" rel="stylesheet")
        link(href="css/selectize.bootstrap3.css" rel="stylesheet")
        link(href="css/main.css" rel="stylesheet")

        // our lovely javascript dependencies
        script(src='js/dep/jquery-2.1.3.min.js', type="text/javascript")
        script(src='js/dep/bootstrap.js', type="text/javascript")
        script(src='js/dep/angular.js', type="text/javascript")
        script(src='js/dep/angular-route.js', type="text/javascript")
        script(src='js/dep/interact-1.2.3.js', type="text/javascript")
        script(src="js/dep/forerunnerdb-all.js", type="text/javascript")
        script(src="js/dep/selectize.js", type="text/javascript")

        // business logic
        script(src='js/mainController.js', type="text/javascript")
        script(src='js/calendarController.js', type="text/javascript")
        script(src='js/dayController.js', type="text/javascript")
        script(src='js/statsController.js', type="text/javascript")

    //body(ng-controller="MainController")
    body
        nav(class="navbar navbar-default navbar-fixed-top")
            div(class="container")
                div(class="navbar-header")
                    button(type="button" class="navbar-toggle collapsed", data-toggle="collapse", data-target="#navbar", aria-expanded="false", aria-controls="navbar")
                        span(class="sr-only")="Toggle navigation"
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    div(class="navbar-brand")="Time Tracker"
                div(id="navbar" class="collapse navbar-collapse")
                    ul(class="nav navbar-nav")
                        li(class="active")
                            a(href="#")="Calendar"
                        li(class="nav-year")
                            a(href="#")="2015"
                        li(class="nav-month")
                            a(href="#")="May"
                        li(class="nav-day")                    
                            a(href="#")="6"
                        li
                            a(href="#")="Statistics"
        div(class="main-container container", ng-view)
