    

nav(class="flex-row-non-expand")
    ul(class="pager")
        li(class="previous")
            a(href="#/calendar/{{yearNum}}/{{monthNum}}")
                span(aria-hidden="true")="←"
                | Previous

        li(class="next")
            a(href="#/calendar/{{yearNum}}/{{monthNum+2}}")="Next"
                span(aria-hidden="true")="→"
        div(class="btn-group" role="group")
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown")
                    span(class="caret")
                    |  {{ yearNum }}
                ul(class="dropdown-menu" role="menu")
                    li
                        a(href="#")="2014"
                    li
                        a(href="#")="2015"
                    li
                        a(href="#")="2016"
            div(class="btn-group" role="group")
                button(type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown")
                    | {{monthToString(monthNum)}}
                    span(class="caret")
                ul(class="dropdown-menu" role="menu")
                    li(ng-repeat="m in monthList")
                        a(href="#/calendar/{{yearNum}}/{{m+1}}")="{{monthToString(m)}}"
div(class="flex-row-expand")
    div(class="calendar-container")="the cal {{monthNum}}"
